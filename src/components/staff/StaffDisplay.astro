---
import { getCollection } from "astro:content";
import StaffSlider from "./StaffSlider";
import company from "@config/company";

const { staffSlugs = [] } = Astro.props;
const staff = await getCollection("staff");

// Filtrar los usuarios por los slugs proporcionados
const filteredStaff = staff.filter((staff) => staffSlugs.includes(staff.slug));

const { boy, girl } = company.images.default;
const defaultPhoto = {
  boy: boy,
  girl: girl,
};
---

<StaffSlider staff={filteredStaff} defaultPhoto={defaultPhoto} />
