---
const { item, slug } = Astro.props;
const { title, characteristics, tags, description, image } = item;
// console.log(Astro.props);
---

<div
  class="w-full p-4 bg-white rounded shadow-lg flex flex-col sm:flex-row gap-4 hover:shadow-xl transition-shadow"
>
  <!-- Imagen del servicio -->
  <img
    src={image}
    alt={`Imagen de ${title}`}
    class="h-32 w-32 sm:h-60 sm:w-60 object-cover rounded"
  />

  <!-- Información del servicio -->
  <div class="flex flex-col justify-between flex-1">
    <div>
      <!-- Título -->
      <h3 class="font-bold text-xl text-primary mb-2">{title}</h3>

      <!-- Descripción -->
      <p class="text-gray-700 mb-4">{description}</p>

      <!-- Características -->
      <ul class="text-sm text-gray-600 mb-4 list-disc pl-5">
        {
          characteristics &&
            characteristics
              .split(", ")
              .map((feature, index) => <li key={index}>{feature}</li>)
        }
      </ul>

      <!-- Etiquetas -->
      <div class="flex flex-wrap gap-2 mt-2">
        {
          tags &&
            tags.map((tag, index) => (
              <span
                key={index}
                class="px-2 py-1 bg-blue-100 text-blue-600 text-xs rounded-full"
              >
                {tag}
              </span>
            ))
        }
      </div>
    </div>

    <!-- Botón para más detalles -->
    <div class="mt-4 sm:mt-0">
      <a
        href={`/services/${slug}`}
        class="px-4 py-2 bg-primary text-white font-semibold rounded hover:bg-primary-dark transition-colors"
      >
        Ver Detalles
      </a>
    </div>
  </div>
</div>
