---
const { item, slug, page } = Astro.props;
const {
  title,
  characteristics,
  tags,
  description,
  image,
  images,
  price,
  serviceType,
} = item;
---

<div
  class="service-card w-full md:w-[45%] lg:w-[30%] p-6 bg-white rounded-3xl shadow-lg flex flex-col gap-4 hover:shadow-xl transition-shadow border"
  data-category={serviceType}
>
  <!-- Imagen del servicio -->
  <img
    src={image || images[0]}
    alt={`Imagen de ${title}`}
    class="h-40 w-full object-cover rounded-lg"
  />

  <!-- Información del servicio -->
  <div class="flex flex-col justify-between flex-1">
    <div>
      <!-- Título -->
      <h3 class="font-bold text-xl text-primary mb-2">{title}</h3>

      <!-- Descripción -->
      <p class="text-gray-700 mb-4">{description}</p>

      <!-- Precio -->
      <!-- {
        price && (
          <p class="text-lg font-semibold text-gray-800 mb-4">
            Precio inicial: ${price}
          </p>
        )
      } -->

      <!-- Características -->
      <ul class="text-sm text-gray-600 mb-4 list-disc pl-5">
        {
          characteristics &&
            characteristics
              .split(", ")
              .map((feature, index) => <li key={index}>{feature}</li>)
        }
      </ul>

      <!-- Etiquetas -->
      <div class="flex flex-wrap gap-2 mt-10 justify-center">
        {
          tags &&
            tags.map((tag, index) => (
              <span
                key={index}
                class="px-2 py-1 bg-blue-100 text-blue-600 text-xs rounded-full"
              >
                {tag}
              </span>
            ))
        }
      </div>
    </div>

    <!-- Botón para más detalles -->
    <div class="mx-auto mt-10 mb-4">
      <a
        href={`/${page}/${slug}`}
        class="w-full text-center px-6 py-3 bg-primary text-white font-semibold rounded-xl hover:bg-primary-dark transition-colors"
      >
        Ver Detalles
      </a>
    </div>
  </div>
</div>
