---
import company from "../../config/company";
import config from "../../config/layout";
import Footer from "./components/Footer.astro";
import FrameAbs from "./components/FrameAbs.astro";
import NavBar from "./components/NavBar.astro";

const logoUrl = company.images.logo;
const navLinks = config.navbar.default;
const {
  title,
  description = "Plataforma dise√±ada para emprendedores argentinos que buscan herramientas y recursos para potenciar sus proyectos.",
  keywords = "emprendedores, Argentina, negocios, recursos, herramientas, marketing, startup",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Tu Empresa" />
    <title>{title}</title>
  </head>
  <body>
    <NavBar logoUrl={logoUrl} navLinks={navLinks} />
    <!-- el Main esta dentro de FrameAbs -->
    <FrameAbs>
      <slot />
    </FrameAbs>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: "Roboto", system-ui, sans-serif;
    background-color: #f8f9fa;
    color: #212529;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    box-sizing: border-box;
  }

  a {
    text-decoration: none;
    color: #007bff;
    transition: color 0.3s;
  }

  a:hover {
    color: #0056b3;
  }

  nav {
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1rem;
    width: 100%;
  }

  footer {
    background-color: #343a40;
    color: #ffffff;
    text-align: center;
    padding: 1rem 0;
    width: 100%;
  }

  footer a {
    color: #ffffff;
    font-weight: bold;
  }
</style>
