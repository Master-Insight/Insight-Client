---
import company from "../../../config/company.js";
import SocialLinkLI from "../../components/SocialLinkLI.astro";
import Email from "../../components/icons/Email.ico.astro";
import Phone from "../../components/icons/Phone.ico.astro";
const { images, info, social } = company;
const year = new Date().getFullYear();
---

<footer class="bg-gray-100 w-full">
  <div class="mx-auto px-4 pb-6 pt-16 sm:px-6 lg:px-8 lg:pt-24">
    <!-- Upper -->
    <div class="flex flex-col gap-8 md:flex-row md:justify-between">
      <!-- Logo -->
      <div>
        <div class="flex justify-center sm:justify-start">
          <img
            src={images.logo[0]}
            alt="Logo Insight"
            class="w-1/2 sm:w-1/3"
            loading="lazy"
          />
        </div>
        <p
          class="mt-6 max-w-md text-center leading-relaxed text-gray-500 sm:max-w-xs sm:text-left"
        >
          {info.description}. Trabajamos con emprendedores argentinos para
          potenciar sus negocios.
        </p>
        <ul class="mt-8 flex justify-center gap-6 sm:justify-start md:gap-8">
          {
            social.map(({ name, href, icon }) => (
              <SocialLinkLI
                href={href}
                name={name}
                icon={icon}
                showLabel={false}
                aria-label={`Visitar ${name}`}
              />
            ))
          }
        </ul>
      </div>

      <!-- Navigation Links -->
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:col-span-2">
        <!-- Sectores -->
        <div class="text-center sm:text-left">
          <p class="text-lg font-medium text-gray-900">Sectores</p>
          <ul class="mt-8 space-y-4 text-sm">
            <li>
              <a
                class="text-gray-700 hover:text-gray-700/75 transition duration-300"
                href="/samples"
              >
                Portafolio
              </a>
            </li>
            <li>
              <a
                class="text-gray-700 hover:text-gray-700/75 transition duration-300"
                href="/services"
              >
                Servicios
              </a>
            </li>
            <!-- <li>
              <a class="text-gray-700 hover:text-gray-700/75" href="/team"
                >Integrantes</a
              >
            </li> -->
            <li>
              <a
                class="text-gray-700 hover:text-gray-700/75 transition duration-300"
                href="/conocenos"
              >
                Conócenos
              </a>
            </li>
            <li>
              <a
                class="text-gray-700 hover:text-gray-700/75 transition duration-300"
                href="/contacto"
              >
                Escríbenos
              </a>
            </li>
          </ul>
        </div>

        <!-- Contacto -->
        <div class="text-center sm:text-left">
          <h2 class="text-lg font-medium text-gray-900">Contacto</h2>
          <ul class="mt-8 space-y-4 text-sm">
            <li>
              <a
                href={`mailto:${info.email}`}
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                aria-label="Enviar correo electrónico a Insight"
              >
                <Email aria-label="Icono de correo electrónico" />
                <span class="flex-1 text-gray-700">{info.email}</span>
              </a>
            </li>
            <li>
              <a
                href={`https://wa.me/${info.whatsapp}`}
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                aria-label="Llamar a Insight por WhatsApp"
              >
                <Phone aria-label="Icono de teléfono" />
                <span class="flex-1 text-gray-700">{info.whatsapp}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 border-t border-gray-100 pt-6">
      <div class="text-center sm:flex sm:justify-between sm:text-left">
        <p class="text-sm text-gray-500">
          <span class="block sm:inline">Todos los derechos reservados.</span>
          <!-- <a href="/politica-de-privacidad" class="hover:text-gray-700">Política de Privacidad</a> -->
        </p>
        <p class="mt-4 text-sm text-gray-500 sm:order-first sm:mt-0">
          &copy; {year}
          {info.name}
        </p>
      </div>
    </div>
  </div>
</footer>
