---
import company from "../../../config/company.js";
import SocialLinkLI from "../../components/SocialLinkLI.astro";

import background from "../../assets/background.svg";
import Email from "../../components/icons/Email.ico.astro";
import Phone from "../../components/icons/Phone.ico.astro";
const { images, info, social } = company;
const year = new Date().getFullYear();
---

<footer class="bg-gray-100 w-full">
  <div class="mx-auto px-4 pb-6 pt-16 sm:px-6 lg:px-8 lg:pt-24">
    <!-- Upper -->
    <div class="flex flex-col gap-8 md:flex-row md:justify-between">
      <!-- Logo -->
      <div>
        <div class="flex justify-center sm:justify-start">
          <img src={images.logo[0]} alt="Logo Insight" class="w-1/3" />
        </div>
        <p
          class="mt-6 max-w-md text-center leading-relaxed text-gray-500 sm:max-w-xs sm:text-left"
        >
          {info.description}
        </p>
        <ul class="mt-8 flex justify-center gap-6 sm:justify-start md:gap-8">
          {
            social.map(({ name, href, icon }) => (
              <SocialLinkLI
                href={href}
                name={name}
                icon={icon}
                showLabel={false}
              />
            ))
          }
        </ul>
      </div>

      <!-- Map -->
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-3 lg:col-span-2">
        <!-- Navegacion 1 -->
        <div class="text-center sm:text-left">
          <p class="text-lg font-medium text-gray-900">Navegación</p>
          <ul class="mt-8 space-y-4 text-sm">
            <li>
              <a
                class="text-gray-700 transition hover:text-gray-700/75"
                href="/"
              >
                Inicio
              </a>
            </li>
          </ul>
        </div>
        <!-- Navegacion 2 -->
        <div class="text-center sm:text-left">
          <p class="text-lg font-medium text-gray-900">Sectores</p>
          <ul class="mt-8 space-y-4 text-sm">
            <li>
              <a
                class="text-gray-700 transition hover:text-gray-700/75"
                href="/services"
              >
                Servicios
              </a>
            </li>
            <li>
              <a
                class="text-gray-700 transition hover:text-gray-700/75"
                href="#"
              >
                Proyectos
              </a>
            </li>
          </ul>
        </div>
        <!-- Info -->
        <div class="text-center sm:text-left">
          <p class="text-lg font-medium text-gray-900">Escríbenos</p>
          <ul class="mt-8 space-y-4 text-sm">
            <!-- Email -->
            <li>
              <a
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                href={`mailto:${social[0].href}`}
              >
                <Email />
                <span class="flex-1 text-gray-700"
                  >{social[0].href.split(":")[1]}</span
                >
              </a>
            </li>
            <!-- Telefono -->
            <li>
              <a
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                href="#"
              >
                <Phone />
                <span class="flex-1 text-gray-700">{info.whatsapp}</span>
              </a>
            </li>
            <!-- Dirección -->
            <!-- <li
              class="flex items-start justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="size-5 shrink-0 text-gray-900"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <address class="-mt-0.5 flex-1 not-italic text-gray-700">
                {info.address}
              </address>
            </li> -->
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 border-t border-gray-100 pt-6">
      <div class="text-center sm:flex sm:justify-between sm:text-left">
        <p class="text-sm text-gray-500">
          <span class="block sm:inline">Todos los derechos reservados.</span>
        </p>
        <p class="mt-4 text-sm text-gray-500 sm:order-first sm:mt-0">
          &copy; {year}
          {info.name}
        </p>
      </div>
    </div>
  </div>
</footer>
