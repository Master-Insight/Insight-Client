---
import company from "../../config/company";
import Layout from "../layouts/Layout.astro";

const telefono = company.info.whatsapp;
const emailfrom = company.info.email; // base.for.insight@gmail.com
---

<Layout
  title="Contacto | Insight - Soluciones Digitales"
  description="Cont√°ctanos en Insight para soluciones digitales personalizadas. Estamos aqu√≠ para responder tus preguntas y ayudarte a impulsar tu negocio en Argentina."
>
  <section class="bg-primary-darker w-full py-16">
    <div class="mx-auto max-w-screen-xl px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 items-center">
        <!-- Formulario -->
        <div class="lg:col-span-3 bg-white p-8 rounded-2xl shadow-lg">
          <h2 class="text-2xl font-bold text-primary mb-6">
            D√©janos tu mensaje
          </h2>
          <form
            id="contact-form"
            class="space-y-4"
            aria-label="Formulario de contacto"
          >
            <!-- Campos del formulario -->
            <div>
              <label
                for="nombre"
                class="block text-lg font-medium text-gray-700"
                id="nombre-label"
              >
                Nombre*
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                aria-labelledby="nombre-label"
              />
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="email"
                  class="block text-lg font-medium text-gray-700"
                  id="email-label"
                >
                  Email*
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                  aria-labelledby="email-label"
                />
              </div>
              <div>
                <label
                  for="telefono"
                  class="block text-lg font-medium text-gray-700"
                  id="telefono-label"
                >
                  Tel√©fono*
                </label>
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  required
                  class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                  aria-labelledby="telefono-label"
                />
              </div>
            </div>

            <div>
              <label
                for="asunto"
                class="block text-lg font-medium text-gray-700"
                id="asunto-label"
              >
                Asunto*
              </label>
              <input
                type="text"
                id="asunto"
                name="asunto"
                required
                class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                aria-labelledby="asunto-label"
              />
            </div>

            <div>
              <label
                for="mensaje"
                class="block text-lg font-medium text-gray-700"
                id="mensaje-label"
              >
                Mensaje*
              </label>
              <textarea
                id="mensaje"
                name="mensaje"
                required
                rows="6"
                class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                aria-labelledby="mensaje-label"></textarea>
            </div>

            <div class="mt-4">
              <button
                type="submit"
                class="w-full sm:w-auto px-6 py-3 bg-black text-white font-semibold rounded-lg hover:bg-gray-800 transition"
              >
                Enviar Mensaje
              </button>
            </div>
          </form>

          <div id="form-response" class="mt-4 text-lg font-medium"></div>
        </div>

        <!-- Informaci√≥n de contacto -->
        <div class="lg:col-span-2 text-white">
          <h1 class="text-4xl font-extrabold mb-6">
            Cont√°ctanos üì© | Soluciones Digitales en Argentina
          </h1>
          <p class="text-lg mb-6 leading-relaxed">
            ¬øTienes un proyecto en mente o alguna consulta? Escr√≠benos y te
            responderemos lo m√°s pronto posible. <a
              href="/servicios"
              class="text-white hover:underline">Descubre nuestros servicios</a
            >.
          </p>
          <div class="mt-4">
            <p class="text-lg">üìû Tel√©fono / WhatsApp:</p>
            <p class="text-2xl font-semibold">{telefono}</p>
          </div>
          <div class="mt-4">
            <p class="text-lg">‚úâÔ∏è Email:</p>
            <p class="text-2xl font-semibold">{emailfrom}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Script -->
    <script type="module">
      document
        .getElementById("contact-form")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const nombre = document.getElementById("nombre").value.trim();
          const email = document.getElementById("email").value.trim();
          const telefono = document.getElementById("telefono").value.trim();
          const asunto = document.getElementById("asunto").value.trim();
          const mensaje = document.getElementById("mensaje").value.trim();

          const responseDiv = document.getElementById("form-response");
          responseDiv.textContent = "Enviando mensaje...";

          try {
            const response = await fetch("/api/contacto", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                nombre,
                email,
                telefono,
                asunto,
                mensaje,
              }),
            });

            const result = await response.json();

            if (result.success) {
              responseDiv.textContent = "¬°Mensaje enviado con √©xito!";
              document.getElementById("contact-form").reset();
            } else {
              responseDiv.textContent =
                "Error al enviar el mensaje: " + result.error;
            }
          } catch (error) {
            responseDiv.textContent = "Error inesperado al enviar el mensaje.";
            console.error("Error al enviar el formulario:", error);
          }
        });
    </script>
  </section>
</Layout>
