            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="email"
                  class="block text-lg font-medium text-gray-700"
                  id="email-label"
                >
                  Email*
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="mt-2 w-full bg-gray-100 rounded-lg border-gray-200 p-3"
                  aria-labelledby="email-label"
                />
              </div>
              <div>
