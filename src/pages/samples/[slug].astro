---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const SAMPLES = await getCollection("samples");
  // console.log(SAMPLES);

  return SAMPLES.map((sample) => ({
    params: { slug: sample.slug },
    props: { sample },
  }));
}

const { sample } = Astro.props;
const { data, slug } = sample;
const { title, description, media, deploy, images, users } = data;
---

<Layout title={title}>
  <div class="p-4">
    <a href="/portfolio" class="text-primary hover:text-primary-dark">
      &larr; Volver
    </a>

    <div class="flex flex-col md:flex-row items-start gap-6 mt-6">
      <!-- Imagen o media del sample -->
      <div class="w-full md:w-1/2">
        {
          images && images.length > 0 ? (
            <img
              src={images[0]}
              alt={`Imagen de ${title}`}
              class="w-full h-auto rounded-lg shadow-lg object-cover"
            />
          ) : (
            <p class="text-gray-500">No hay imágenes disponibles</p>
          )
        }
      </div>

      <!-- Información del sample -->
      <div class="w-full md:w-1/2 flex flex-col gap-4">
        <!-- Título del sample -->
        <h1 class="text-4xl font-bold text-primary mb-4">{title}</h1>

        <!-- Descripción -->
        <p class="text-lg text-gray-700 leading-relaxed">{description}</p>

        <!-- Usuarios relacionados -->
        {
          users && users.length > 0 && (
            <div>
              <h2 class="text-2xl font-semibold text-secondary mt-6">
                Usuarios Relacionados:
              </h2>
              <ul class="text-gray-600 list-disc pl-5 mt-2">
                {users.map((user, index) => (
                  <li key={index}>{user}</li>
                ))}
              </ul>
            </div>
          )
        }

        <!-- Media relacionados -->
        {
          media && media.length > 0 && (
            <div class="mt-4">
              <h2 class="text-2xl font-semibold text-secondary">Media:</h2>
              <ul class="list-disc pl-5 mt-2 text-blue-600">
                {media.map((url, index) => (
                  <li key={index}>
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="underline hover:text-blue-800">
                      {url}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )
        }

        <!-- Enlace de despliegue -->
        {
          deploy && (
            <div class="mt-4">
              <a
                href={deploy}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg text-primary underline hover:text-primary-dark">
                Ver Despliegue
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</Layout>
