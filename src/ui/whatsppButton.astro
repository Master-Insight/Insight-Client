---
import company from "../../config/company";

const whatsappNumber = company.info.whatsapp.replace(/[^0-9]/g, ""); // Elimina caracteres no numéricos
const message = "Hola, me gustaría más información.";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-4 right-4 bg-green-500 text-white p-4 rounded-full shadow-glow hover:bg-green-600 transition-all flex items-center justify-center"
>
  <img src="/img/svg/whatsapp.svg" alt="WhatsApp" class="w-6 h-6" />
</a>
